{
	"name": "monotecture",
	"type": "module",
	"private": true,
	"scripts": {
		"application:serve": "concurrently \"cd app/client && bun run dev\" \"cd app/server && bun run dev\"",
		"application:build": "cd app/client && bun run build",
		"application:format": "biome format --write",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/bun": "latest",
		"husky": "^9.1.7"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"workspaces": [
		"./app/client",
		"./app/server"
	],
	"dependencies": {
		"concurrently": "^9.2.1"
	}
}
